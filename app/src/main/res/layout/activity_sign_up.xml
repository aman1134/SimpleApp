<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/up_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textColor="#9DF0FE"
        android:textColorHint="#D5D5D5"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint="#D5D5D5"
        android:textColor="#9DF0FE"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/up_email"
        app:layout_constraintStart_toStartOf="@+id/up_email"
        app:layout_constraintTop_toBottomOf="@+id/up_email" />

    <EditText
        android:id="@+id/up_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#D5D5D5"
        android:textColor="#9DF0FE"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/up_name"
        app:layout_constraintStart_toStartOf="@+id/up_name"
        app:layout_constraintTop_toBottomOf="@+id/up_name" />

    <EditText
        android:id="@+id/uo_cnpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColorHint="#D5D5D5"
        android:textColor="#9DF0FE"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/up_pass"
        app:layout_constraintStart_toStartOf="@+id/up_pass"
        app:layout_constraintTop_toBottomOf="@+id/up_pass" />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:fontFamily="@font/aladin"
        android:textSize="40sp"
        android:textColor="#9DF0FE"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/button_bg"
        android:text="Sign Up"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>